<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_green_100"
    android:padding="20dp"
    tools:ignore="UselessParent"
    tools:context=".fragments.toolsFragments.chohan.ChoHanPopWindow">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_30"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Name:"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/cho_han_pop_up_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="name"
                    android:textColorHint="@color/black50"
                    android:textColor="@color/black"
                    android:background="@drawable/border_50"
                    android:padding="14dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Points:"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/cho_han_pop_up_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="points"
                    android:textColorHint="@color/black50"
                    android:textColor="@color/black"
                    android:background="@drawable/border_50"
                    android:padding="14dp"
                    android:inputType="number"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/cho_han_pop_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_50"
            android:padding="10dp"
            android:textSize="26sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="Add Player"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</FrameLayout>